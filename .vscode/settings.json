{
	// Set Biome as the default formatter for relevant file types
	"editor.defaultFormatter": "biomejs.biome",
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2, // Example: Project uses 2 spaces
		"editor.insertSpaces": true,
		"editor.detectIndentation": false
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.detectIndentation": false
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.detectIndentation": false
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.detectIndentation": false
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[html]": {
		"editor.defaultFormatter": "biomejs.biome"
	},

	// Core formatting preferences for this project
	"editor.formatOnSave": true, // Enable format on save for this project
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	"editor.tabSize": 2, // Project-wide default for files without specific overrides
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,

	// Biome specific settings for this project
	"biomejs.biome.enabled": true, // Ensure Biome extension is enabled for this project
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit", // Run Biome fixes on save
		"source.organizeImports": "explicit" // Biome handles import organization
	},

	// Explicitly disable Prettier and ESLint for this project
	"prettier.enable": false,
	"eslint.enable": false
}
